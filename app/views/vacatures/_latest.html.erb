<div class="container">
  <div id="laatste-vacatures">
    <h2>Laatste vacatures</h2>
    <div class="customhr left"></div>
    <div class="vacatures">
      <% @vacatures.each do |vacature| %>
      <div class="vacature">
        <div class="icon">
          <i class="glyphicon devicon-<%= vacature.category.logo %>-plain"></i>
        </div>
        <div class="tekst">
          <h3><%= vacature.title %></h3>
          <p>Google / <%= vacature.location %> / <%= vacature.created_at.strftime("%d %B %Y") %></p>
        </div>
        <div class="buttonz">
          <%= link_to "Bekijk vacature!", vacature_path(vacature), class: "btn btn-primary" %>
        </div>
        <div class="clearfix"></div>
      </div>
      <% end %>
    </div>
    <%= link_to "Meer vacatures", vacatures_path, class: "btn btn-secondary align-center" %>
  </div>
</div>