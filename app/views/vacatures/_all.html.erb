<div class="container">
  <div id="laatste-vacatures">
    <h2>Alle vacatures</h2>
    <div class="customhr left"></div>
      <div class="vacatures">
        <% @vacatures.each do |vacature| %>
        <div class="vacature">
          <div class="icon">
            <i class="glyphicon devicon-<%= vacature.category.logo %>-plain"></i>
          </div>
          <div class="tekst">
          <h3><%= vacature.title %></h3>
          <p>Google / <%= vacature.location %> / <%= vacature.created_at.strftime("%d %B %Y") %></p>
        </div>
      <div class="buttonz">

      <%= link_to "Bewerk", edit_vacature_path(vacature), class: "btn btn-info" %>
      <%= link_to "X", vacature_path(vacature), class: "btn btn-danger", method: :delete, data: {confirm: "Weet je zeker dat je deze vacature wilt verwijderen?"} %>

    </div>

    <div class="clearfix"></div>
  </div>
  <% end %>
</div>
</div>
</div>