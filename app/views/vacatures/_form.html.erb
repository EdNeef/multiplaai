<div class="container">
<%= simple_form_for @vacature do |v| %>

<div class="form-group">
  <%= v.input :title %>
</div>

<div class="form-group">
  <%= v.input :category, collection: [:angular, :css3, :drupal, :git, :html5, :linux, :photoshop, :php, :ruby, :wordpress], selected: :angular %>
</div>
  
<div class="form-group">
  <%= v.input :location %>
</div>  

<div class="form-group">
  <%= v.input :description %>
</div>  
  
<%= v.submit "Doe maar!", class: "btn btn-primary" %>
<% end %>
</div>